title: Daily Briefing
layout: base.njk
pagination: 
    data: news
    size: 1
    alias: news
permalink: /{{ news.country }}/index.html
---


<div class="container">
        <h1>The Home Page</h1>
        <div class="content">
            <p>A static site home page</p>
        </div>
        <div class="sub-content">With love ‚ù§ !</div>

        <div id="weather" class="hidden">
            <h2>Weather near you</h2>
            <p id="city"></p>
            <p id="temp"></p>
            <p id="main"></p>
            <p id="desc"></p>
        </div>

        <h2>News in your country</h2>
        <ul>
        {% for article in news.articles  %}
            <li>
                <h2> <a href='{{article.url}}'>{{article.title}}</a></h2>
                <span> {{article.source.name}} - {{article.publishedAt}} </span>
            </li>
        {% endfor %}
        </ul>
        
</div>
<script src='/js/script.js'></script>
<script src='/js/weather.js'></script>